class Solution {
public:
    int maxArea(vector<int>& height) {
        int left=0;
        int right=height.size()-1;
        int marea=0;

        while(left<right)
        {
            int cnt=min(height[left],height[right]);
            int width=right-left;
            int area=cnt*width;
            marea=max(marea,area);

            if(height[left]<height[right])
            {
                left++;
            }
            else
            {
                right--;
            }

        }

        return marea;        
    }
};
