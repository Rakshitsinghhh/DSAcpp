class Solution {
public:
    string sortVowels(string s) {
        string vowels = "aeiouAEIOU"; 
        string v = "";
        string t = "";

        for (int i = 0; i < s.size(); i++) {
            if (vowels.find(s[i]) != string::npos) {
                v += s[i];
            }
        }

        sort(v.begin(), v.end());

        int pos = 0;
        for (int i = 0; i < s.size(); i++) {
            if (vowels.find(s[i]) != string::npos) {
                t += v[pos++];
            } else {
                t += s[i];
            }
        }

        return t;
    }
};
