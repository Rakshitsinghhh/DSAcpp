class Solution {
public:
    int minMoves(int target, int maxDoubles) {
        int count=0;

        while(target>1){
            if(target%2==0 && maxDoubles!=0){
                target=target/2;
                maxDoubles-=1;
            }
            else if(maxDoubles==0){
                count+=target-1;
                break;
            }
            else{
                target-=1;
            }
            count++;
        }

        return count;
        
    }
};
