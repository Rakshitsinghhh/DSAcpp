class Solution {
public:
    int minOperations(string s) {
        if (s.size() == 0) {
            return 0;
        }

        int count = 0;

        char a = s[0];     

        if (a == '1') {    
            bool val = true;
            for (int i = 0; i < s.size(); i++) {
                char expected = val ? '1' : '0';
                if (s[i] != expected) {
                    count++;
                }
                val = !val;
            }
        }

        if (a == '0') {
            bool val = true;
            for (int i = 0; i < s.size(); i++) {
                char expected = val ? '0' : '1';
                if (s[i] != expected) {
                    count++;
                }
                val = !val;
            }
        }

        return min(count, (int)s.size() - count);
    }
};
