class Solution {
public:
    bool checkPossibility(vector<int>& nums) {
        int n = nums.size();
        if(n <= 2) return true;

        for(int i = 0; i < n; i++){
            bool answer = true;
            int prev = -1e9; 

            for(int j = 0; j < n; j++){
                if(j == i) continue;
                if(prev > nums[j]){
                    answer = false;
                    break;
                }
                prev = nums[j];
            }

            if(answer) return true;
        }

        return false;
    }
};
