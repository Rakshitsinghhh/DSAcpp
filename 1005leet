
class Solution {
public:

    int largestSumAfterKNegations(vector<int>& nums, int k) {

        int ans = 0;
        int sum = 0;

        for (int l = 0; l < k; l++) {
            ans = 0; 


            // Find the smallest element in the array
            for (int i = 1; i < nums.size(); i++) {
                if (nums[i] < nums[ans]) {
                    ans = i;
                }
            }


            // Negate the smallest element
            nums[ans] = -nums[ans];
        }

        // Calculate the sum of the array
        for (int ele : nums) {
            sum += ele;
        }

        return sum;
    }
};
