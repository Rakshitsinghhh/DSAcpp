class Solution {
public:
    vector<int> constructTransformedArray(vector<int>& nums) {
        vector<int> result;
        int n = nums.size();

        for (int i = 0; i < n; i++) {
            if (nums[i] > 0) {
                int curr = (i + nums[i]) % n;
                result.push_back(nums[curr]);
            }
            else if (nums[i] < 0) {
                int curr = (i - abs(nums[i])) % n;
                if (curr < 0) curr += n;
                result.push_back(nums[curr]);
            }
            else {
                result.push_back(0);
            }
        }

        return result;
    }
};
