class Solution {
public:
    int minimumArea(vector<vector<int>>& grid) {

        int n = grid.size(), m = grid[0].size();
        int imin = n, jmin = m, imax = -1, jmax = -1;

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (grid[i][j] == 1) {
                    imin = min(imin, i);
                    jmin = min(jmin, j);
                    imax = max(imax, i);
                    jmax = max(jmax, j);
                }
            }
        }

        if (imax == -1) return 0; // no 1's at all

        return (imax - imin + 1) * (jmax - jmin + 1);
    }
};
