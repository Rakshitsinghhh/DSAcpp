class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        long long ans = 0;
        long long left = 0;
        long long right = 0;
        int n = nums.size();

        while (right < n) {
            if (nums[right] == 0) {  
                ans += (right - left + 1);
                right++;
            } else {
                right++;
                left = right;
            }
        }
        return ans;
    }
};
