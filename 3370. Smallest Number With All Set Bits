class Solution {
public:
    long long tobin(int i){
        long long ans = 0;
        long long multiplier = 1;

        while(i!=0){
            int a =  i % 2;
            ans = a * multiplier + ans;
            multiplier *=10;
            i=i/2;
        }

        return ans;
    }
    bool checker(long long a){
        bool ans = false;
        string s=to_string(a);

        for(int i=0;i<s.size();i++){
            if(s[i]!='1'){
                return false;
            }
        }

        return true;
    }
    int smallestNumber(int n) {

        while(true){

            long long ans =  tobin(n);
            if(checker(ans)) return n;
            n++;
        }

        return -1;
    }
};
