class Solution {
public:
    int canBeTypedWords(string text, string brokenLetters) {
        int count=0;
        string word;
        stringstream ss(text);

        while(ss>>word){
            bool ok = true;
            for(char c : brokenLetters){
                if(word.find(c)!=string::npos){
                    ok=false;
                    break;
                }
            }
            if(ok) count++;
        }


        return count;
        
    }
};
