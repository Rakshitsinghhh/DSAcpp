class Solution {
public:
    vector<long long> getDistances(vector<int>& arr) {
        vector<long long> ans(arr.size(), 0);
        
        unordered_map<int, vector<int>> seen;
        for (int i = 0; i < arr.size(); i++) {
            seen[arr[i]].push_back(i);
        }

        for (int i = 0; i < arr.size(); i++) {
            for (int idx : seen[arr[i]]) {
                ans[i] += abs(i - idx);
            }
        }

        return ans;
    }
};
