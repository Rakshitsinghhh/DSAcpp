class Solution {
public:
    vector<vector<int>> matrixReshape(vector<vector<int>>& mat, int r, int c) {
        int m = mat.size();
        int n = mat[0].size();

        if (m * n != r * c) return mat;

        vector<vector<int>> answer;
        vector<int> pre;

        for(auto ele : mat){
            for(auto ele1 : ele){
                pre.push_back(ele1);
            }
        }

        int idx = 0;
        for(int i = 0; i < r; i++){
            vector<int> row;
            for(int j = 0; j < c; j++){
                row.push_back(pre[idx++]);  
            }
            answer.push_back(row);
        }

        return answer;
    }
};
