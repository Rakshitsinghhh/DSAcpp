class Solution {
public:
    int unequalTriplets(vector<int>& nums) {
        int count = 0;

        int left = 0;
        int mid = left + 1;
        int right = mid + 1;

        while (left < nums.size()) {

            if (mid >= nums.size() || right >= nums.size()) {
                left++;
                mid = left + 1;
                right = mid + 1;
                continue;
            }

            if (nums[left] != nums[mid] &&
                nums[left] != nums[right] &&
                nums[mid] != nums[right]) {
                count++;
            }

            right++;

            if (right >= nums.size()) {
                mid++;
                right = mid + 1;
            }

            if (mid >= nums.size()) {
                left++;
                mid = left + 1;
                right = mid + 1;
            }
        }

        return count;
    }
};
